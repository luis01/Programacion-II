<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbltitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPERACIONES BASICAS"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/txtnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbltitulo"
        android:hint="Escribe un numero"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/txtnum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnum1"
        android:hint="Escribe un numero"
        android:layout_margin="10dp"/>
    <Spinner
        android:id="@+id/cboOperacionesBasicas"
        android:layout_below="@id/txtnum2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:entries="@array/operacionesBasicas"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/optOperacionesBasicas"
        android:layout_width="wrap_content"
        android:layout_below="@id/txtnum2"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/optSuma"
            android:checked="true"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/optResta"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/optMultiplicacion"
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/optDivision"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/optFactorial"
            android:text="!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/optOperacionesBasicas"
        android:layout_marginTop="20dp"
        android:text="Respuesta: ?"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblRespuesta"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:onClick="calcular"
        android:text="Calcular" />

</RelativeLayout>